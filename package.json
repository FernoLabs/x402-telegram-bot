		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"rollup-plugin-node-polyfills": "^0.2.1",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
