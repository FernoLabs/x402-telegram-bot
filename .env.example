# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# x402 Payment Configuration
RECEIVER_ADDRESS=0xYourWalletAddress
PAYMENT_NETWORK=base

# Optional: Cloudflare KV Storage
# Provide these three values to persist data in Cloudflare instead of the in-memory demo store
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_KV_ACCOUNT_ID=
CLOUDFLARE_KV_NAMESPACE_ID=

# Optional: disable demo data creation
# Set to "false" to keep the seed data from being inserted automatically
SEED_DEMO_DATA=true
